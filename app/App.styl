html, body
	font-family: "Lato"
	color: white
	margin: 0
	padding: 0

.app
	background-attachment: fixed
	background-color: #1e88e5
	background-position: center
	background-size: cover

	.settingsOverlay
		background: rgba(0, 0, 0, 0.6)
		position: fixed
		top: 0
		left: 0
		width: 100%
		height: 100%
		z-index: 2

	.sectionButton
		position: fixed
		font-size: 32px
		left: 50%
		bottom: 20px
		margin-left: -16px
		width: 32px
		text-align: center

	.settingsButton
		position: fixed
		top: 20px
		right: 20px

	.top
		align-items: center
		display: flex
		font-size: 14px
		text-shadow: 0 0 4px black
		height: 100vh

		.topCenter
			margin-top: -50px
			text-align: center
			vertical-align: middle
			width: 100%

	.feedbackRow
		background: rgba(200, 200, 200, 0.9)
		padding: 10px 0
		text-align: center

.app.scrolled
	.sectionButton
		bottom: calc(100% - 36px - 20px)

		i:before
			content: "\f01b"