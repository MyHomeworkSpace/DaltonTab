.imageInfoBar
	background: linear-gradient(to top, rgba(0, 0, 0, 0.8) 0%, transparent 100%)
	position: fixed
	bottom: 0
	left: 0
	width: 100%
	height: 140px

	.imageInfo
		position: fixed
		left: 30px
		bottom: 30px
		font-weight: normal
	
		a
			font-weight: bold
			text-decoration: none

	.imageDesc 
		font-size: 1.4em

	.imageDesc.loading
		font-size: 1em

	.imageSubDesc
		font-size: 0.8em