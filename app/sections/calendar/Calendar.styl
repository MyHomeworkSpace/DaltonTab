.calendarHeaderLeft
	font-size: 18px
	line-height: 40px
	height: 40px
	
.calendarHeaderLoading
	font-size: 14px
	margin-left: 5px

.calendarHeaderRight
	text-align: right

.calendarViewport
	border: solid 1px white
	width: 100%

.calendarWeek
	display: flex
	width: 100%

.calendarDayHeader, .calendarDayContents, .calendarAnnouncements
	flex: 1
	width: 100%

.calendarDayHeader
	height: 25px
	text-align: center

.calendarDayContents.day0, .calendarAnnouncements.day0
	border-left: none

.calendarDayContents
	border-left: solid 1px white
	position: relative

.calendarAnnouncements
	border-left: solid 1px white
	border-bottom: solid 1px white
	font-weight: bold
	min-height: 2rem
	text-align: center