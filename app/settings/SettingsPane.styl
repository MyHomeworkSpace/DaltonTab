.settingsPane
	animation: settingsPaneOpen 0.3s ease-in-out
	background: white
	border-left: solid 1px black
	color: black
	padding-top: 20px
	padding-left: 20px
	padding-right: 20px
	overflow-y: auto
	position: fixed
	top: 0
	right: 0
	width: 400px
	height: 100%
	z-index: 5

	.settingsPaneTitle
		margin-top: 0

	.settingsPaneClose
		cursor: pointer
		font-size: 24px
		position: absolute
		top: 20px
		right: 20px

	h4:not(:first-child)
		margin-top: 15px

	label
		display: block

	.import-field
		font-family: Menlo,Monaco,Consolas,"Courier New",monospace;

@keyframes settingsPaneOpen
	from
		right: -400px
		opacity: 0

	to
		right: 0
		opacity: 1